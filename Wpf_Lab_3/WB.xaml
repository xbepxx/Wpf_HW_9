<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="WindowStyle">
        <Setter Property="ItemsControl.Background" Value="White"/>
    </Style>
    <Style x:Key="MenuItemStyle" BasedOn="{StaticResource WimdowStyle}">
        <Setter Property="MenuItem.Foreground" Value="Black"/>
    </Style>
    <Style x:Key="ComboBoxStyle" BasedOn="{StaticResource WimdowStyle}">
        <Setter Property="ComboBox.Foreground" Value="Black"/>
    </Style>
    <Style x:Key="RadioButtonStyle" BasedOn="{StaticResource WimdowStyle}">
        <Setter Property="RadioButton.Foreground" Value="Black" />
    </Style>
    <Style x:Key="TextBoxTrayStyle" BasedOn="{StaticResource WimdowStyle}">
        <Setter Property="TextBox.Foreground" Value="Black"/>
    </Style>
</ResourceDictionary>